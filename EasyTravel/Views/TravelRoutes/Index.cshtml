@model IEnumerable<EasyTravel.Models.TravelRoute>
@{
    Layout = "_Layout";
}

<h2 class="text-center my-4 display-5 fw-semibold text-success">🧳 Seyahat Rotaları</h2>

<div class="container">
    <div class="table-responsive">
        <table class="table table-hover align-middle text-center shadow-sm rounded-4">
            <thead class="table-success text-dark">
                <tr>
                    <th>📍 Rota Adı</th>
                    <th>📄 Açıklama</th>
                    <th>⏳ Süre</th>
                    <th>💰 Fiyat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var route in Model)
                {
                    <tr style="background-color: @GetRowBackgroundColor(route.Price)">
                        <td class="fw-bold">@route.RouteName</td>
                        <td>@route.Description</td>
                        <td>@route.Duration saat</td>
                        <td><strong>$@route.Price</strong></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@functions {
    private string GetRowBackgroundColor(decimal price)
    {
        if (price < 200)
            return "#FFFDE7";  // Açık sarı
        if (price < 500)
            return "#E8F5E9";  // Açık yeşil
        return "#FBE9E7";      // Açık kırmızımsı
    }
}
