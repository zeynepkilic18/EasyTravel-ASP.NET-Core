
@{
    ViewData["Title"] = "Index";
}
@model List<EasyTravel.Models.Hotel>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Oteller | EasyTravel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
<body>
    <div class="container py-5">
        <h2 class="text-center text-primary fw-bold mb-5">Popüler Oteller</h2>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var hotel in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow border-0">
                        

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-dark fw-bold">
                                <i class="bi bi-building text-primary me-2"></i>@hotel.Name
                            </h5>
                            <p class="card-subtitle mb-2 text-muted">
                                <i class="bi bi-geo-alt-fill text-danger me-1"></i>@hotel.Location
                            </p>
                            <p class="card-text flex-grow-1">@hotel.Description</p>
                            <div class="mt-3">
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-currency-lira me-1"></i>@hotel.PricePerNight / gece
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
